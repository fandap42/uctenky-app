generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "debian-openssl-3.0.x"]
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  fullName     String   @map("full_name")
  role         AppRole  @default(MEMBER)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  tickets      Ticket[]

  @@map("users")
}

model Section {
  id        String   @id @default(cuid())
  name      String
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  tickets   Ticket[]

  @@map("sections")
}

model Ticket {
  id           String       @id @default(cuid())
  requesterId  String       @map("requester_id")
  sectionId    String       @map("section_id")
  status       TicketStatus @default(PENDING_APPROVAL)
  purpose      String
  targetDate   DateTime     @map("target_date")
  budgetAmount Decimal      @map("budget_amount") @db.Decimal(12, 2)
  createdAt    DateTime     @default(now()) @map("created_at")
  updatedAt    DateTime     @updatedAt @map("updated_at")
  isFiled      Boolean      @default(false) @map("is_filed")
  note         String?
  receipts     Receipt[]
  requester    User         @relation(fields: [requesterId], references: [id], onDelete: Cascade)
  section      Section      @relation(fields: [sectionId], references: [id], onDelete: Cascade)

  @@index([requesterId])
  @@index([sectionId])
  @@index([status])
  @@map("tickets")
}

model Receipt {
  id          String        @id @default(cuid())
  store       String
  date        DateTime
  amount      Decimal       @db.Decimal(12, 2)
  fileUrl     String        @map("file_url")
  isPaid      Boolean       @default(false) @map("is_paid")
  expenseType ExpenseType   @default(MATERIAL) @map("expense_type")
  status      ReceiptStatus @default(PENDING)
  ticketId    String        @map("ticket_id")
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")
  note        String?
  ticket      Ticket        @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  @@index([ticketId])
  @@index([status])
  @@map("receipts")
}

model Deposit {
  id          String   @id @default(cuid())
  amount      Decimal  @db.Decimal(12, 2)
  description String?
  date        DateTime @default(now())
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("deposits")
}

model DebtError {
  id        String   @id @default(cuid())
  amount    Decimal  @db.Decimal(12, 2)
  reason    String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("debt_errors")
}

model CashOnHand {
  id        String   @id @default(cuid())
  amount    Decimal  @db.Decimal(12, 2)
  reason    String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("cash_on_hand")
}

enum AppRole {
  MEMBER
  HEAD_VEDENI
  HEAD_FINANCE
  HEAD_HR
  HEAD_PR
  HEAD_NEVZDELAVACI
  HEAD_VZDELAVACI
  HEAD_SPORTOVNI
  HEAD_GAMING
  HEAD_KRUHOVE
  ADMIN
}

enum TicketStatus {
  PENDING_APPROVAL
  APPROVED
  VERIFICATION
  DONE
  REJECTED
}

enum ReceiptStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ExpenseType {
  MATERIAL
  SERVICE
}
