generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

enum AppRole {
  MEMBER
  HEAD_VEDENI
  HEAD_FINANCE
  HEAD_HR
  HEAD_PR
  HEAD_NEVZDELAVACI
  HEAD_VZDELAVACI
  HEAD_SPORTOVNI
  HEAD_GAMING
  HEAD_KRUHOVE
  ADMIN
}

enum TicketStatus {
  PENDING_APPROVAL
  APPROVED
  VERIFICATION
  DONE
  REJECTED
}

enum ReceiptStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ExpenseType {
  MATERIAL
  SERVICE
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String    @map("password_hash")
  fullName      String    @map("full_name")
  role          AppRole   @default(MEMBER)
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  
  tickets       Ticket[]
  
  @@map("users")
}

model Section {
  id          String    @id @default(cuid())
  name        String
  isActive    Boolean   @default(true) @map("is_active")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  
  tickets     Ticket[]
  
  @@map("sections")
}

model Ticket {
  id              String       @id @default(cuid())
  requesterId     String       @map("requester_id")
  requester       User         @relation(fields: [requesterId], references: [id], onDelete: Cascade)
  sectionId       String       @map("section_id")
  section         Section      @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  status          TicketStatus @default(PENDING_APPROVAL)
  purpose         String
  targetDate      DateTime     @map("target_date")
  budgetAmount    Decimal      @map("budget_amount") @db.Decimal(12, 2)
  createdAt       DateTime     @default(now()) @map("created_at")
  updatedAt       DateTime     @updatedAt @map("updated_at")
  
  receipts        Receipt[]
  
  @@index([requesterId])
  @@index([sectionId])
  @@index([status])
  @@map("tickets")
}

model Receipt {
  id              String        @id @default(cuid())
  store           String
  date            DateTime
  amount          Decimal       @db.Decimal(12, 2)
  fileUrl         String        @map("file_url")
  isPaid          Boolean       @default(false) @map("is_paid")
  expenseType     ExpenseType   @default(MATERIAL) @map("expense_type")
  status          ReceiptStatus @default(PENDING)
  ticketId        String        @map("ticket_id")
  ticket          Ticket        @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  isFiled         Boolean       @default(false) @map("is_filed")
  note            String?
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")

  @@index([ticketId])
  @@index([status])
  @@map("receipts")
}


model Deposit {
  id          String   @id @default(cuid())
  amount      Decimal  @db.Decimal(12, 2)
  description String?
  date        DateTime @default(now())
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("deposits")
}

model DebtError {
  id          String   @id @default(cuid())
  amount      Decimal  @db.Decimal(12, 2)
  reason      String
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("debt_errors")
}

model CashOnHand {
  id          String   @id @default(cuid())
  amount      Decimal  @db.Decimal(12, 2)
  reason      String
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("cash_on_hand")
}
